<div class = "categories-wrapper">

  <h1>Categorias</h1>
  <div class = "category-list">
    <% @categories.each do |category| %>
      <div class = "category">
        <% posts = Post.where(category_id: category.id) %>
        <%= link_to category.name, category, class: "category-description" %>
        <%= link_to image_tag(category.icon), category %>
        <p class = "post-count">Posts: <%= posts.count %></p>
        <% if posts.count > 0 %>
          <%= link_to 'Ultimo post: ' + Post.where(category_id: category.id).last.title, Post.where(category_id: category.id).last, class: 'last-post' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>